# CLARITY Digital Twin Platform - Environment Configuration
# Copy this file to .env and customize for your environment
# For demo purposes, these default values should work with Docker Compose

# =========================================
# ENVIRONMENT SETTINGS
# =========================================
ENVIRONMENT=development
DEBUG=true
TESTING=false
LOG_LEVEL=INFO

# =========================================
# GOOGLE CLOUD & FIREBASE CONFIGURATION
# =========================================
GOOGLE_CLOUD_PROJECT=clarity-demo
FIREBASE_PROJECT_ID=clarity-demo
FIRESTORE_DATABASE_ID=(default)

# Firebase Auth Emulator (for local development)
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIRESTORE_EMULATOR_HOST=localhost:8080
PUBSUB_EMULATOR_HOST=localhost:8085

# =========================================
# API KEYS (Optional for demo)
# =========================================
# Uncomment and add your API keys for full functionality
# GOOGLE_API_KEY=your_google_api_key_here
# GEMINI_API_KEY=your_gemini_api_key_here

# =========================================
# SERVICE CONFIGURATIONS
# =========================================
# Redis
REDIS_URL=redis://localhost:6379

# Database
DATABASE_URL=sqlite:///./clarity_demo.db

# Storage
HEALTHKIT_RAW_BUCKET=clarity-demo-healthkit-raw
PROCESSED_DATA_BUCKET=clarity-demo-processed-data

# =========================================
# SECURITY & MONITORING
# =========================================
SECRET_KEY=demo_secret_key_change_in_production
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =========================================
# FEATURE FLAGS
# =========================================
SKIP_EXTERNAL_SERVICES=true
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# =========================================
# PAT MODEL CONFIGURATION
# =========================================
PAT_MODEL_PATH=./models/pat_model
ENABLE_PAT_ANALYSIS=true

# =========================================
# DEMO SPECIFIC SETTINGS
# =========================================
DEMO_MODE=true
AUTO_SEED_DATA=true
MOCK_EXTERNAL_APIS=true
